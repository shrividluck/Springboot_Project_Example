package com.shri.mtts.entity.impl;
import java.util.List;

import com.shri.mtts.entity.Movie;

public class MovieImpl implements Movie {

	private Long id;	
	private String movieName;
	private String genre;
	private String castCrew;
	private String ratings;
	private String reviews;	
	private String synopsis;
	private List<String> theatersPlayingMovie;
	
	public MovieImpl() {
	}
	
	public MovieImpl(String movieName) {
		this.movieName = movieName;
		this.id = (long) 1234;
		this.genre = "default";
		this.castCrew = "generic";
		this.ratings = "*****";
		this.reviews = "defaultReview";
		this.synopsis = "defaultSynopsis";
	}
	
	public MovieImpl (long id, String mName, String gen, String cc, String rat, String rev, String syn) {
		this.id = id;
		this.movieName = mName;
		this.genre = gen;
		this.castCrew = cc;
		this.ratings = rat;
		this.reviews = rev;
		this.synopsis = syn;
	}
	
	public MovieImpl(long id2) {
		// TODO Auto-generated constructor stub
		this.id = id2;
	}
    // what is this ? is it required ?
	public String getMovieName() {
		// TODO Auto-generated method stub
		return movieName;
	}
	
	public String getMovieCastCrew() {
		// TODO Auto-generated method stub
		return this.castCrew;
	}
	
	public String getMovieRatings() {
		// TODO Auto-generated method stub
		return ratings;
	}
	
	public String getReviews() {
		// TODO Auto-generated method stub
		return reviews;
	}
	
	public String getSynopsis() {
		// TODO Auto-generated method stub
		return synopsis;
	}
	public void setMovieName(String movieName) {
		this.movieName = movieName;
	}
	public void setGenre(String genre) {
		this.genre = genre;
	}
	public String getCastCrew() {
		return castCrew;
	}
	public void setCastCrew(String castCrew) {
		this.castCrew = castCrew;
	}
	public String getRatings() {
		return ratings;
	}
	public void setRatings(String ratings) {
		this.ratings = ratings;
	}
	public void setReviews(String reviews) {
		this.reviews = reviews;
	}
	public void setSynopsis(String synopsis) {
		this.synopsis = synopsis;
	}

	@Override
	public long getId() {
		// TODO Auto-generated method stub
		return 0;
	}

	@Override
	public String getMovieGenre() {
		// TODO Auto-generated method stub
		return genre;
	}
    // new
	@Override
	public List<String> getTheatersPlayingMovie() {
		// TODO Auto-generated method stub
		return theatersPlayingMovie;
	}
    // new
	public void setTheatersPlayingMovie(List<String> theatersPlayingMovie) {
		this.theatersPlayingMovie = theatersPlayingMovie;
	}

	
	
}