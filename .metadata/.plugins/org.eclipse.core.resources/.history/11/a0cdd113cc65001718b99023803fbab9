package com.shri.mtts.service;
import com.shri.mtts.entity.Theater;


public interface TheaterService {
	
	Theater addMovieToTheater(Theater movie);

	void updateMovieInfo(Theater movie);

	Theater getMovieInfo(String str);

	/**
	 * Search user by first or last name, partial searches also performed
	 * 
	 * @param firstName
	 * @param lastName
	 * @return Empty list is returned if none found
	 */
	Iterable<Theater> getMoviesList(String name);

	

}
